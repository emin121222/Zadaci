.gallery-section {
    margin-bottom: 30px;
}

.gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.gallery-item {
    position: relative;
    width: 100px; /* Adjust the width for smaller images */
    height: 100px; /* Adjust the height for smaller images */
    margin: 10px;
    background-color: #3498db;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.gallery-item h3,
.gallery-item p {
    position: relative;
    z-index: 1;
    color: #fff;
    padding: 10px;
    margin: 0;
}

/* Media queries for responsiveness */
@media (max-width: 768px) {
    .gallery-item {
        width: 80px; /* Adjust the width for smaller images */
        height: 80px; /* Adjust the height for smaller images */
    }
}

@media (max-width: 480px) {
    .gallery-item {
        width: 100%; /* Full width for phone view */
        height: auto; /* Adjust height as needed */
    }
}
